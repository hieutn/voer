<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight"
    tools:context=".fragment.DetailContentFragment" >

    <LinearLayout style="@style/Layout.FillWidthHeight.Vertical" >

        <LinearLayout
            style="@style/Layout.FillWidth"
            android:background="@android:color/darker_gray"
            android:padding="5dp" >

            <vn.edu.voer.view.AutoBgButton
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_cc_by" />

            <LinearLayout style="@style/Layout.FillWidth.Vertical" >

                <TextView
                    android:id="@+id/lblAuthor"
                    style="@style/Text.Content.White"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textSize="13sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/lblPublishDate"
                    style="@style/Text.Content.White"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textSize="13sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <WebView
            android:id="@+id/webViewContent"
            style="@style/Layout.FillWidthHeight" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBar"
        android:visibility="gone" />

</RelativeLayout>