<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidth.Vertical"
    android:padding="@dimen/default_padding"
    tools:context=".fragment.LibraryFragment" >

    <TextView
        android:id="@+id/frm_library_item_title"
        style="@style/Layout.FillWidth"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/frm_library_item_btn_remove"
        android:drawableLeft="@drawable/ic_book"
        android:drawablePadding="@dimen/default_padding"
        android:text="@string/app_name"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/frm_library_item_btn_remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/remove" />

</RelativeLayout>