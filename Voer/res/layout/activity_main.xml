<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout.FillWidthHeight.Vertical"
    android:background="@android:color/white"
    tools:context=".activity.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/lblHeaderLeft"
            style="@style/Text.Shadow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawablePadding="2dp"
            android:paddingLeft="8dp"
            android:text="@string/app_name"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblHeader"
            style="@style/Text.Shadow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblHeaderRight"
            style="@style/Text.Shadow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textSize="13sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgSetting"
            style="@style/Layout.WrapWidthHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutFragment"
        style="@style/Layout.Weight.HeightFillWidth" >

        <fragment
            android:id="@+id/fragmentLibrary"
            android:name="vn.edu.voer.fragment.LibraryFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentCategory"
            android:name="vn.edu.voer.fragment.CategoryFragment"
            style="@style/Layout.FillWidthHeight" />

        <fragment
            android:id="@+id/fragmentSearch"
            android:name="vn.edu.voer.fragment.SearchFragment"
            style="@style/Layout.FillWidthHeight" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/darker_gray" >

        <RelativeLayout
            android:id="@+id/layoutTabLibrary"
            style="@style/Layout.Weight.WidthFillHeight" >

            <TextView
                style="@style/Text.Shadow"
                android:layout_centerVertical="true"
                android:text="@string/library" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTabCategory"
            style="@style/Layout.Weight.WidthFillHeight" >

            <TextView
                style="@style/Text.Shadow"
                android:layout_centerVertical="true"
                android:text="@string/category" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTabSearch"
            style="@style/Layout.Weight.WidthFillHeight" >

            <TextView
                style="@style/Text.Shadow"
                android:layout_centerVertical="true"
                android:text="@string/search" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>